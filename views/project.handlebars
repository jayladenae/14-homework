<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{text}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<!-- Loop over each object in the comments array -->
{{#each comments as |comment|}}
<p>{{text}}</p>
{{/each}}
<!-- Display comments  -->
<form id = "comment-post">
  <div class='form-group'>
    <label for='project-desc'>Comment:</label>
    <textarea
      class='form-input'
      id='comment-text'
      name='comment-text'
    ></textarea>
    <input type="hidden" name="post_id" value="{{id}}" id="post_id"/>
  </div>
  <div class='form-group'>
    <button type='submit' class='btn btn-primary'>Submit</button>
  </div>
</form>

<script src='/js/comment.js'></script>